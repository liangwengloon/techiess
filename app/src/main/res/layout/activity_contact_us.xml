<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4A90E2">


        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Contact Us"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:src="@drawable/baseline_arrow_back_24"/>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_marginTop="50dp"
        android:background="#4A90E2"
       >
    </RelativeLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/logo2" />

    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/location"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:src="@drawable/baseline_location_on_24" />

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/location"
        android:padding="16dp"
        android:text="29, JALAN PUTERI 5/5, BANDAR PUTERI PUCHONG 47100 SELANGOR, MALAYSIA"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/openMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address"
        android:clickable="true"
        android:onClick="openMap"
        android:padding="16dp"
        android:text="Open Map"
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/phone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/openMap"
        android:layout_centerHorizontal="true"
        android:src="@drawable/baseline_local_phone_24" />

    <TextView
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/phone"
        android:onClick="callPhoneNumber"
        android:padding="16dp"
        android:text="(+60) 12-123 1235"
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textSize="18sp"
         android:clickable="true"/>

    <ImageView
        android:id="@+id/workinghour"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/phoneNumber"
        android:layout_centerHorizontal="true"
        android:src="@drawable/baseline_access_time_24" />

    <TextView
        android:id="@+id/hours"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@id/workinghour"
        android:padding="16dp"
        android:text="Monday - Friday: 9am - 5pm\nSaturday - Sunday: 9am - 12pm"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

</RelativeLayout>